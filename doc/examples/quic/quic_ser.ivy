    public:
        quic_ser() : state(quic_s_init) {
        }
        virtual void  set(long long res) {
            switch (state) {
            case quic_s_init:
            {
                long_format = res & 1;
                state = quic_s_type;
            }
            break;
            case quic_s_type:
            {
                hdr_type = res;
		setn(hdr_type | (long_format ? 0x80 : 0), 1);
                state = quic_s_version;
            }
            break;
            case quic_s_version:
            {
                if (long_format)
                    setn(res,4);
                state = quic_s_dcil;
            }
            break;
            case quic_s_dcil:
            {
                dcil = res;
                state = quic_s_scil;
            }
            break;
            case quic_s_scil:
            {
                scil = res;
                if (long_format) {
                    setn(((dcil & 0xf) << 4) | (scil & 0xf),1);
                }
                state = quic_s_dcid;
            }
            break;
            case quic_s_dcid:
            {
		setn(res,(dcil ? (dcil+3) : 0));
                state = quic_s_scid;
            }
            break;
            case quic_s_scid:
            {
		setn(res,(scil ? (scil+3) : 0));
                state = quic_s_retry_token_length;
            }
            break;
            case quic_s_payload_length:
            {
                payload_length_pos = this->res.size();
                if (long_format) {
                    setn(res,2);  // will fill in correct value later
                }
                state = quic_s_pkt_num;
            }
            break;
            case quic_s_pkt_num:
            {
                set_pkt_num(res);
                state = quic_s_payload;
            }
            break;
            case quic_stream_off:
            {
                frame_type |= res ? 0x04 : 0;
                state = quic_stream_len;
            }
            break;
            case quic_stream_len:
            {
                frame_type |= res ? 0x02 : 0;
                state = quic_stream_fin;
            }
            break;
            case quic_stream_fin:
